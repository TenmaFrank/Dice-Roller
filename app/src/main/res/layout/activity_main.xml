<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/diceOneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dice_one_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/diceTwoTextView"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/diceTwoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dice_two_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/diceOneTextView"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/diceOneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/dice_one_button_label"
            app:layout_constraintTop_toBottomOf="@+id/diceOneTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/diceTwoButton"/>

        <Button
            android:id="@+id/diceTwoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/Dice_two_button_label"
            app:layout_constraintTop_toBottomOf="@+id/diceTwoTextView"
            app:layout_constraintStart_toEndOf="@+id/diceOneButton"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>